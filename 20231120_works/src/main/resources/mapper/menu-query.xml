<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">
<properties>
    <entry key="findAllMenu">
        SELECT
            *
          FROM TBL_MENU
    </entry>
    <entry key="findAllCategory">
        SELECT
            CATEGORY_CODE
          FROM TBL_CATEGORY
    </entry>

    <entry key="insertMenu">
        INSERT INTO TBL_MENU(
            HAMSTER_CODE,
            HAMSTER_NAME,
            HAMSTER_OLD,
            HAMSTER_TYPE,
            SHEEPY_STATUS
        ) VALUES(
            NULL,
            ?,
            ?,
            ?,
            ?
        )
    </entry>

    <entry key="DeleteMenu">
        DELETE
        FROM TBL_MENU WHERE HAMSTER_NAME = ?
    </entry>
</properties>